<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.mvpstatelibexample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.github.mvpstatelibexample.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.mvpstatelibexample.ui.activities.first.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.mvpstatelibexample.ui.activities.second.SecondActivity"
            android:label="@string/title_activity_second"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.github.mvpstatelibexample.ui.activities.third.ThirdActivity"
            android:label="@string/title_activity_third"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.activities.fourth.ComplexTaskScreen"
                  android:label="@string/title_activity_complex_task"
            />
    </application>

</manifest>